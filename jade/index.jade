doctype html

mixin bio(name, github, githuburl, image, bio)
	.instructor-bio
		.avatar.img-wrap
			img.img-responsive(src="#{image}")
		.info
			h3.name #{name}
			a(href="#{githuburl}") github/#{github}
		p.bio #{bio}

mixin thumb(name, githuburl, image)
	.student-thumb
		.img-wrap
			img.img-responsive(src="#{image}")
		h5.name
			a(href="#{githuburl}") #{name}

html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title("Olin.js")

		link(href="css/bootstrap.min.css", rel="stylesheet")
		link(href="stylesheets/style.css", rel="stylesheet")
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')

	body
		.jumbotron
			.container
				img.img-responsive.logo(src="img/logo.svg")
				h3 A class on programming and web development at Olin College, Spring 2015

				h3
					a(href="http://www.github.com/olinjs/olinjs") GitHub
				h5 Meets Tuesdays and Fridays 3:20â€“5:00 in AC326 (<a href="ical/class.ics">Download iCal</a>)
		.container
			h2.row-header Students
			.row
				each student in students
					.col-sm-3
						+thumb(student.name, student.githuburl, student.image)
			h2.row-header Teaching Team						
			.row
				each teacher in teachers
					.col-sm-6
						+bio(teacher.name, teacher.github, teacher.githuburl, teacher.image, teacher.bio)
			h2.row-header NINJAs
			.row
				each ninja in ninjas
					.col-sm-6
						+bio(ninja.name, ninja.github, ninja.githuburl, ninja.image, ninja.bio)